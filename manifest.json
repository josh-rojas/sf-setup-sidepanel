{
  "manifest_version": 3,
  "name": "Salesforce Setup Sidepanel",
  "version": "1.0.0",
  "description": "Enhances Salesforce productivity by providing quick access to Setup menu through Chrome's side panel. Navigate Salesforce setup pages efficiently without leaving your current tab.",
  "author": "Josh",
  "minimum_chrome_version": "116",
  "homepage_url": "https://github.com/joshmedeski/sf-setup-sidepanel",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "permissions": [
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.salesforce.com/*",
    "*://*.force.com/*",
    "*://*.salesforce-setup.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.salesforce.com/*",
        "*://*.force.com/*",
        "*://*.salesforce-setup.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["styles.css", "icons/*"],
    "matches": [
      "*://*.salesforce.com/*",
      "*://*.force.com/*",
      "*://*.salesforce-setup.com/*"
    ]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Salesforce Setup"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https:; img-src 'self' data: https:; frame-ancestors *"
  }
}
